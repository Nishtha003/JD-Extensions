<?xml version="1.0" encoding="UTF-8"?>
<form>
<fieldset name="items_modal" label="Tab Items">
   <field
         name="option"
         type="list"
         class="btn-group btn-group-yesno" 
         label="MOD_JDTABS_XML_OPTIONS_LABEL"
         description="MOD_JDTABS_XML_OPTIONS_DESC"
         default="img"
    >
         <option value="img">MOD_JDTABS_XML_OPTIONS_IMG</option>
         <option value="title">MOD_JDTABS_XML_OPTIONS_TITLE</option>
   </field>
      <field name="title"
             label="MOD_JDTABS_XML_TITLE_LABEL"
             showon="option:title"
             type="text">
      </field>
      <field name="thumbnail"
             type="media"
             showon="option:img"
             label="MOD_JDTABS_XML_TITLE_THUMBNAIL">
      </field>
      <field
         name="content"
         type="editor"
         label="MOD_JDTABS_XML_CONTENT_LABEL">
      </field>
   </fieldset>
</form>