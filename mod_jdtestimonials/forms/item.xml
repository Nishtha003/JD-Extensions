<?xml version="1.0" encoding="UTF-8"?>
<form>
   <fieldset name="items_modal" label="Testimonials Items">
      <field name="author_name"
             label="Name"
             type="text">
      </field>
	  <field name="author_thumbnail"
             type="media"
             label="Image">
      </field>
	  <field name="author_companyName"
             label="Company Name"
             type="text">
      </field>
	  <field name="author_companyLink"
             label="Company Link"
             type="text">
      </field>
	 <field
		   name="rating"
		   type="list"
		   label="Rating"
		   description="Rating"
		   default="1"
		>
		   <option value="1">1</option>
		   <option value="2">2</option>	   
		   <option value="3">3</option>
		   <option value="4">4</option>	   
		   <option value="5">5</option>
       </field>
      <field
         name="author_companyReview"
         type="textarea"
         label="Review">
      </field>
   </fieldset>
</form>